extends base.pug

block content
  if errorMessage
    span=errorMessage
    
  form(method="POST" )
    input(name="title" type="text" placeholder="Title" maxlength=14 required)
    input(name="description" type="text" minlength=10 placeholder="Description" required)
    input(name="hashtags" type="text" placeholder="Hashtags, seperated by comma" required)
    input(type="submit" value="Upload Video")